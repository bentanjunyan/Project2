<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    

<div>Child Status: <%=userdata[0].child_status%></div>

<br>

<div>
  <form method="POST">        
    <label> Update Status </label>
    <select name="status">
      <option value= "Available" name= "status"> Available </option>    
      <option value= "Busy" name= "status"> Busy </option>          
      <option value= "Do Not Disturb" name= "status"> Do Not Disturb </option>         
    </select>
      <input type="submit" value="Submit" />
    </form>  
</div>

<br>

<div>
  <ul>
    <% eventdata.forEach((event)=>{ %>
    <li>Event: <%=event.description%></li> 

    <li>Date: <%=event.date%></li>

    <br>

     <form action="/child/editevent/<%= event.event_id%>">
      <input type="submit" value="Edit Event" />
    </form>

    <form action="/child/delevent/<%= event.event_id%>">
      <input type="submit" value="Delete Event" />
    </form>

    <br>
    <% }); %>
  </ul> 
</div>

<br>

<div>
  <form action="/child/addevent/<%= userdata[0].id%>">
      <input type="submit" value="Add Event" />
  </form> 
</div>

<br>

<form action="/user">
    <input type="submit" value="User Dashboard" />
</form>

<form action="/logout">
    <input type="submit" value="Logout" />
</form>

    
 
  </body>
</html>